{% extends 'base.html.twig' %}
{% block body %}
    <h1>Test !</h1>
    <h2>Bonjour {{ nameOfUser|striptags }} !</h2>
    <p>{{ serie.title }} : {{ serie.year }}</p>
    {# Création de variable #}

    {% set name = "Camille" %}

    {# Affichage d'une variable #}

    <h2>Votre fils {{ name }}</h2>

    {% set colors = ['cornflowerblue', 'pink', 'purple', 'green'] %}

    {% for color in colors %}

        {% if loop.first %}

            <p>Première itération</p>

        {% endif %}

        {% if loop.last %}

            <p>Dernière itération</p>

        {% endif %}

        <div style="background-color: {{ color }}">{{ color }}</div>
        <div id="">Position de l'élément {{ loop.index }}/{{ loop.length }}</div>


    {% endfor %}


    {# Manipulation d'objet #}

    {% set serie = {
        title : "breaking bad",
        year : 2008
    } %}

    <h3>Title : {{ serie.title }}</h3>

    {% for key,val in serie %}
        <p>{{ key }} : {{ val }}</p>
    {% endfor %}

    {# quelques filtres #}

    <h3>Filtres</h3>

    <div> {{ name|upper }} : {{ name|length }} letters</div>
    <div>Colors : {{ colors |join(' - ') }}  </div>
    <div> {{ "now"|date('Y-m-d') }}</div>

{% endblock %}

{% block tiltle %}
    {# parent() récupére le contenu du bloc base.html.twig, soit series #}
    {{ parent() }}| test
{% endblock %}