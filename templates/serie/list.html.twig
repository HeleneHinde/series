{% extends 'base.html.twig' %}

{% block body %}

    <h2>List of TV Shows</h2>

    <section class="series-list">

        {% for serie in series %}
            <article>
                <a href="{{ path('serie_show', {'id': serie.id}) }}" title="View details about {{ serie.name }}"><img src="{{ asset('img/posters/series/'~serie.poster) }}" alt="{{ serie.name }}"></a>

            </article>
        {% endfor %}

    </section>
{% endblock %}

{% block tiltle %}

    {{ parent() }} | List

{% endblock %}